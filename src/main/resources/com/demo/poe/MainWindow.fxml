<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="803.0" prefWidth="388.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane onMouseDragged="#menuDragged" onMousePressed="#menuPressed" prefHeight="42.0" prefWidth="377.0">
         <left>
            <HBox prefHeight="42.0" prefWidth="325.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ImageView fx:id="iconApplication" fitHeight="28.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="titleApplicationLabel" alignment="CENTER" prefHeight="32.0" prefWidth="131.0" text="ExileTrader" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="32.0" prefWidth="175.0">
                     <children>
                        <ImageView fx:id="divineOrb" fitHeight="28.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="priceDivine" alignment="CENTER" prefHeight="25.0" prefWidth="145.0" text="x 1 ⇐ ">
                           <font>
                              <Font size="11.6" />
                           </font>
                        </Label>
                        <ImageView fx:id="exileOrb" fitHeight="28.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </left>
         <right>
            <Button mnemonicParsing="false" onAction="#closeBtn" prefHeight="38.0" prefWidth="49.0" text="X" BorderPane.alignment="CENTER">
               <font>
                  <Font size="8.0" />
               </font>
            </Button>
         </right>
      </BorderPane>
      <VBox alignment="CENTER" layoutY="51.0" prefHeight="753.0" prefWidth="388.0" spacing="20.0" style="-fx-background-color: #1c1c1c; -fx-font-family: &quot;Verdana&quot;, sans-serif; -fx-font-size: 14px; -fx-base: #2c2c2c; -fx-text-fill: #e4e4e4;">
         <children>
            <VBox prefHeight="37.0" prefWidth="386.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="22.0" prefWidth="386.0">
                     <children>
                        <Label text="Item level:">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="itemLevelField" prefHeight="30.0" prefWidth="44.0">
                           <HBox.margin>
                              <Insets left="2.0" />
                           </HBox.margin>
                        </TextField>
                        <Label text="Quality:">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="itemQualityField" prefHeight="30.0" prefWidth="54.0">
                           <HBox.margin>
                              <Insets left="2.0" right="10.0" />
                           </HBox.margin>
                        </TextField>
                        <CheckBox fx:id="isCorrupted" mnemonicParsing="false" text="Corrupted" />
                     </children>
                     <VBox.margin>
                        <Insets right="5.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox fx:id="mods" prefHeight="337.0" prefWidth="386.0" />
            <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#search" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-font-size: 14px;" text="Search" />
            <HBox alignment="CENTER_LEFT" prefHeight="27.0" prefWidth="386.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="38.0" prefWidth="414.0">
                     <children>
                        <Label fx:id="resultNotFound">
                           <font>
                              <Font size="11.5" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#openPoeTrade" prefHeight="38.0" prefWidth="85.0" text="Trade" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <TableView fx:id="table" editable="true" focusTraversable="false" onScroll="#reloadData" prefHeight="248.0" prefWidth="386.0" stylesheets="@main.css">
              <columns>
                <TableColumn fx:id="price" prefWidth="165.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;" text="Price" />
                <TableColumn fx:id="lvl" prefWidth="195.0" style="-fx-font-size: 14px; -fx-text-fill: #ecf0f1;" text="Lvl" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
